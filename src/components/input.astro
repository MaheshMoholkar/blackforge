---
const { name, id, type } = Astro.props;
const isTextarea = type === "textarea";
---

<div class="relative group z-0">
  <div
    class="absolute inset-0 outline outline-2 -outline-offset-2 outline-zinc-700 [mask-image:linear-gradient(225deg,transparent_10px,black_10px)] group-hover-within:outline-fuchsia-500 -z-10"
  >
  </div>
  <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute top-0 right-0 text-zinc-700 group-hover-within:text-fuchsia-500 -z-10"
  >
    <path d="M0 1H12.2667L23 11.7333V24" stroke="currentColor" stroke-width="2"
    ></path>
  </svg>
  {
    isTextarea ? (
      <textarea
        name={name}
        id={id}
        class="bg-transparent h-32 w-full px-4 py-3 outline-none resize-none"
        rows="2"
      />
    ) : (
      <input
        type={type}
        name={name}
        id={id}
        class="bg-transparent h-12 w-full px-4 outline-none"
      />
    )
  }
</div>
